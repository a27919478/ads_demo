<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_toRightOf="@+id/iv_user"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.gms.ads.formats.MediaView
            android:id="@+id/mediaView"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_below="@+id/tv_user"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />

        <!--<Button
            android:id="@+id/bt_remove"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:minWidth="102dp"
            android:layout_below="@+id/mediaView"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_remove_bg"
            android:clickable="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Remove ads"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />-->

        <LinearLayout
            android:id="@+id/bt_remove"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/mediaView"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/shape_remove_bg"
            android:clickable="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="102dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false">

            <TextView
                android:id="@+id/bt_remove_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove ads"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ad"
            android:layout_width="49dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/bt_remove"
            android:layout_toRightOf="@+id/bt_remove"
            android:background="@drawable/shape_sign_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Ad"
            android:textColor="#ff7d68ff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_remove"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            android:includeFontPadding="false"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_action"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/tv_des"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/shape_button_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</com.google.android.gms.ads.formats.UnifiedNativeAdView>
