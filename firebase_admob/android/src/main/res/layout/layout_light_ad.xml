<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="#F6F7FB"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/iv_user"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="#FF2D2D2D"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user"
                    android:layout_alignBottom="@+id/iv_user"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/iv_user"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="#2D2D2D"
                    android:textSize="12sp" />

                <com.google.android.gms.ads.formats.MediaView
                    android:id="@+id/mediaView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mediaView"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/tv_ad"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:textColor="#2D2D2D"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mediaView"
                    android:layout_alignRight="@+id/mediaView"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="AD"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_action"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_below="@+id/tv_des"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_button_bg"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bt_remove"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_light_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/bt_remove_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove ads"
                    android:textColor="#6A91FF"
                    android:textStyle="bold"
                    android:textSize="11sp" />

                <ImageView
                    android:src="@drawable/icon_arrow_admob"
                    android:layout_width="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="9.6dp" />
            </LinearLayout>

            <!--<Button
                android:id="@+id/bt_remove"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_light_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:stateListAnimator="@null"
                android:text="Remove ads"
                android:textColor="#6A91FF"
                android:textSize="11sp"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/icon_arrow_facebook"/>-->


        </LinearLayout>
    </ScrollView>


</com.google.android.gms.ads.formats.UnifiedNativeAdView>
